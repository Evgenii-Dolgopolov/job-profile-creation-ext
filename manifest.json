{
  "manifest_version": 3,
  "name": "Job Application Assistant",
  "version": "1.0",
  "description": "A Chrome extension to create and manage job application profiles.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["autofill.js"]
    }
  ]
}
